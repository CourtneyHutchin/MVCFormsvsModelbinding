
@{
    ViewData["Title"] = "Register";
}

@if (ViewData["Message"] != null) 
{ 
	<h4 class="alert alert-success">@ViewData["Message"]</h4>	
}

<div class="card text-white bg-primary mb-3" style="max-width: 20rem;">
	<div class="card-header">Customer Sign Up Page!</div>
	<div class="card-body">
		<h4 class="card-title">Please fill out the form below</h4>
	</div>

	<form method="post">
		<label for="full-name">Full Name:</label>
		<input type="text" id="full-name" name="full-name" />
		<span>*</span>
		<br />

		<label for="dob">Date of Birth:</label>
		<input type="date" id="dob" name="dob">
		<span>*</span>
		<br />

		<label for="email">Email:</label>
		<input type="email" id="email" name="email" />
		<span>*</span>
		<br />
		<br />

		<input type="submit" name="name" value="Register" class="btn btn-secondary" />
		<br />
		<br />

	</form>

</div>